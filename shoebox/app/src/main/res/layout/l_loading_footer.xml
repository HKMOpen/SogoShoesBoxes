<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/footer_loader_height"
    android:background="@color/primary_pref_v2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:textSize="@dimen/g_item_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/status_now"
            android:layout_marginLeft="@dimen/button_margin_horizontal"
            android:layout_marginRight="@dimen/button_margin_horizontal"
            android:text="TEST" />

        <TextView
            android:layout_marginLeft="@dimen/button_margin_horizontal"
            android:layout_marginRight="@dimen/button_margin_horizontal"
            android:gravity="center"
            android:textSize="@dimen/price_tag_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_extra"
            android:text="TEST" />
    </LinearLayout>
</FrameLayout>