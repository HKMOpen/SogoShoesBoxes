    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/abc_btn_check_to_on_mtrl_000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
