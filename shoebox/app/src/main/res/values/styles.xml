    <style name="LoadButton" xmlns="http://schemas.android.com/apk/res-auto">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">sample button here</item>
        <item name="android:textSize">15sp</item>
        <item name="pb_colorNormal">@color/primary_pref</item>
        <item name="pb_colorPressed">@color/primary_pref_v2</item>
        <item name="pb_colorComplete">@color/green_900</item>
        <item name="pb_textComplete">task complete</item>
        <item name="pb_textProgress">@string/wait_button</item>
        <item name="pb_textError">@string/error_button</item>
        <item name="pb_colorError">@color/red_200</item>
        <item name="pb_cornerRadius">0dp</item>
        <!--<item name="pb_disabled">@color/dark</item>-->
